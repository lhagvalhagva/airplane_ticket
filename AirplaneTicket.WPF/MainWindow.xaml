<Window x:Class="AirplaneTicket.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirplaneTicket.WPF"
        mc:Ignorable="d"
        Title="Aircraft Passenger Registration" Height="600" Width="1000" Background="#f7f7fa">
    <DockPanel>
        <!-- Navigation Bar -->
        <StackPanel Orientation="Horizontal" Background="#0078D7" Height="48" DockPanel.Dock="Top">
            <Button x:Name="CheckInNavButton" Content="Check-in" Margin="8,0" Padding="16,8" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16"/>
            <Button x:Name="FlightsNavButton" Content="Flights" Margin="8,0" Padding="16,8" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16"/>
            <Button x:Name="PassengersNavButton" Content="Passengers" Margin="8,0" Padding="16,8" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16"/>
            <Button x:Name="BoardingPassesNavButton" Content="Boarding Passes" Margin="8,0" Padding="16,8" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16"/>
        </StackPanel>
        <!-- Main Content Frame -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
