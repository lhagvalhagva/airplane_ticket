<Window x:Class="AirplaneTicket.WPF.Dialogs.PassengerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding DialogTitle}" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBox x:Name="txtFirstName" 
                     materialDesign:HintAssist.Hint="First Name"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,10"/>
            
            <TextBox x:Name="txtLastName"
                     materialDesign:HintAssist.Hint="Last Name"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,10"/>
            
            <TextBox x:Name="txtEmail"
                     materialDesign:HintAssist.Hint="Email"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,10"/>
            
            <TextBox x:Name="txtPhone"
                     materialDesign:HintAssist.Hint="Phone Number"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,10"/>
            
            <DatePicker x:Name="dpDateOfBirth"
                        materialDesign:HintAssist.Hint="Date of Birth"
                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                        Margin="0,0,0,10"/>
            
            <TextBox x:Name="txtPassport"
                     materialDesign:HintAssist.Hint="Passport Number"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="btnCancel_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnSave" Content="Save" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window> 